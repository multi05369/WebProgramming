<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container-md">
        <div class="row">
            <div class="col">
                <h1>Todo List</h1>
            </div>
            <div class="col">
                <button type="button" class="btn btn-primary float-end" onclick="addTodo()">Add Todo</button>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Deadline</th>
                    <th>Complete</th>
                </tr>
            </thead>

            <tbody>
                <% data.forEach((item) => { %>
                    <tr>
                        <td><%=item.ID %></td>
                        <td><%=item.Title %></td>
                        <td><%=item.Deadline %></td>
                        <td><input type="checkbox" class="form-check-input"></td>
                    </tr>
                <% }); %>

            </tbody>

        </table>
    </div>

    <script>
        function addTodo() {
            window.location.href = "/create";
        }
    </script>
    
</body>
</html>